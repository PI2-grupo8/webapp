<html>

  <h1>
    <%= @filename %>
  </h1>

  <style>
    #titulo {
      padding-left: 10%;
      padding-right: 10%;
    }
    #tabela {
      padding-left: 10%;
      padding-right: 10%;
    }
    #botao {
      padding-left: 10%;
      padding-right: 10%;
    }
    #botao2 {
      padding-left: 10%;
    }
  </style>

  <div class="content measurements">

  <div id="titulo">
    <h4>
      <i class="material-icons prefix">assessment</i>
      <span>Medições</span>
    </h4>
  </div>

  <div id="botao">
    <%= form_tag import_measurements_path, multipart: true, id: 'myForm' do %>
    <% end %>

    <a id="read_data" class="waves-effect waves-light btn">Ler dados</a>


    <script>
      $(document).ready(function() {
        $('#read_data').on('click', function() { $('#myForm').submit(); });
      });

    </script>
  </div>

  <br>

  <div id="tabela">
    <table class="centered">
    <thead>
       <tr>
           <th>Coleta</th>
           <th>Tabela</th>
           <th>Mapa de Calor</th>
           <th>Mapa de Calor</th>
           <th>Mapa de Calor</th>
       </tr>
    </thead>

    <tbody>
      <% @measurements.each_with_index do |measurement, index| %>
        <tr>
          <td><%= measurement %></td>
          <td><%= link_to "Tabela geral", measurements_table_page_path(:id => measurement), class: "btn waves-effect waves-light" %></td>
          <td><%= link_to "Umidade do solo", measurements_humidity_heatmap_path(:id => measurement), class: "btn waves-effect waves-light blue" %></td>
          <td><%= link_to "Umidade do ar", measurements_air_humidity_heatmap_path(:id => measurement), class: "btn waves-effect waves-light blue" %></td>
          <td><%= link_to "Temperatura do ar", measurements_air_temperature_heatmap_path(:id => measurement), class: "btn waves-effect waves-light red" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

</html>
